{% extends 'base.html.twig' %}

{% block body %}
    <h1>Recipes list</h1>

    <table>
        <thead>
            <tr>
                <th>Recipeid</th>
                <th>Recipename</th>
                <th>Description</th>
                <th>Picture</th>
                <th>Video</th>
                <th>Recipeuser</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td><a href="{{ path('recipe_show', { 'recipeid': recipe.recipeid }) }}">{{ recipe.recipeid }}</a></td>
                <td>{{ recipe.recipename }}</td>
                <td>{{ recipe.description }}</td>
                <td>{{ recipe.picture }}</td>
                <td>{{ recipe.video }}</td>
                <td>{{ recipe.recipeuser }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('recipe_show', { 'recipeid': recipe.recipeid }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('recipe_edit', { 'recipeid': recipe.recipeid }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('recipe_new') }}">Create a new recipe</a>
        </li>
    </ul>
{% endblock %}
